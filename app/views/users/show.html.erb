<div class="container-profile">
  <div class="column-left-profile">
    <div class="box-1 d-flex justify-content-center">
      <%= link_to user_avatar(@user), edit_user_registration_path %>
    </div>
    <div class="box-1 d-grid gap-2 p-4">
      <button type="button" class="btn btn-primary position-relative">
        Мои сообщения
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
          <%= 15 %>
          <span class="visually-hidden">непрочитанные сообщения</span>
        </span>
      </button>
    </div>

    <div class="box-1 d-grid gap-2 p-4">
      <%= link_to user_song_all_path, class: 'btn btn-primary position-relative' do %>
          Мои аккорды
          <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            <%= @user.songs.count %>
          </span>
      <% end %>
    </div>

    <div class="box-1 d-grid gap-2 p-4">
      <button type="button" class="btn btn-primary position-relative">
        Мои списки
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
          <%= @user.songs.count %>
          <span class="visually-hidden">непрочитанные сообщения</span>
        </span>
      </button>
    </div>
    <div class="box-1 d-grid gap-2 p-4">
      <button type="button" class="btn btn-primary position-relative">
        Мои задачи
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
          <%= @user.songs.count %>
          <span class="visually-hidden">непрочитанные сообщения</span>
        </span>
      </button>
    </div>
    <div class="box-1 d-grid gap-2 p-5">
    </div>
  </div>

  <div class="column-center-profile">
    <div class="column-center m-2">
      <%= render "users/songs" %>
    </div>
    
    <p><%= link_to "Добавить песню", new_song_path, class: "btn btn-dark bi bi-music-note" %></p>

    
    <div>
      <button type="button" class="btn btn-primary position-relative">
        Ваш список добавленных
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
          <%= @user.songs.count %>
          <span class="visually-hidden">непрочитанные сообщения</span>
        </span>
      </button>
    </div>
  </div>

  <div class="column-right-profile">
    <div class="box-title-songs d-flex justify-content-center text-center  fs-4 text">Последние добавленные</div>
    <div class="box-songs text-center">
      <%= render "users/songs" %>
    </div>
  </div>
</div>
</div>
